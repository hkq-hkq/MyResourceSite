---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import { resources, categories } from '../../data/resources';
---

<Layout title="后台管理 - 资源库">
  <main class="min-h-screen">
    <!-- 后台顶部栏 -->
    <header class="sticky top-0 z-50 backdrop-blur-2xl border-b border-white/10" style="background: rgba(15, 23, 42, 0.85);">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-4">
            <a href="/" class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
              <span class="text-xl font-bold gradient-text">资源库</span>
            </a>
            <span class="px-3 py-1 rounded-lg text-xs font-bold bg-purple-500/20 text-purple-300 border border-purple-500/30">管理后台</span>
          </div>
          <div class="flex items-center gap-3">
            <a href="/" class="nav-link text-sm px-4 py-2">返回首页</a>
            <a href="/admin/publish" class="btn-gradient px-6 py-2.5 text-sm font-bold rounded-xl inline-flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              发布新资源
            </a>
          </div>
        </div>
      </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <!-- 统计卡片 -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
        <div class="glass-card p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center glow-sm">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
              </svg>
            </div>
            <span class="text-green-400 text-sm">+12%</span>
          </div>
          <div class="text-3xl font-bold mb-1">{resources.length}</div>
          <div class="text-slate-400 text-sm">总资源数</div>
        </div>

        <div class="glass-card p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center glow-sm">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l4-4m4 4V9a2 2 0 00-2-2H6a2 2 0 00-2 2v11"/>
              </svg>
            </div>
            <span class="text-green-400 text-sm">+8%</span>
          </div>
          <div class="text-3xl font-bold mb-1">125.8K</div>
          <div class="text-slate-400 text-sm">总下载量</div>
        </div>

        <div class="glass-card p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-pink-500 to-rose-500 flex items-center justify-center glow-sm">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
              </svg>
            </div>
            <span class="text-green-400 text-sm">+5%</span>
          </div>
          <div class="text-3xl font-bold mb-1">{categories.length}</div>
          <div class="text-slate-400 text-sm">资源分类</div>
        </div>

        <div class="glass-card p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-orange-500 to-amber-500 flex items-center justify-center glow-sm">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <span class="text-green-400 text-sm">+15%</span>
          </div>
          <div class="text-3xl font-bold mb-1">2,450</div>
          <div class="text-slate-400 text-sm">访问用户</div>
        </div>
      </div>

      <!-- 资源管理 -->
      <div class="glass-card">
        <div class="flex items-center justify-between p-6 border-b border-white/10">
          <h2 class="text-xl font-bold gradient-text">资源列表</h2>
          <div class="flex items-center gap-3">
            <div class="relative">
              <input
                type="search"
                placeholder="搜索资源..."
                class="input-modern pl-10 pr-4 py-2.5 text-sm w-64"
              />
              <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <select class="input-modern px-4 py-2.5 text-sm cursor-pointer">
              <option>全部分类</option>
              {categories.map(cat => (
                <option>{cat.name}</option>
              ))}
            </select>
          </div>
        </div>

        <!-- 资源表格 -->
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-white/10">
                <th class="text-left p-4 text-sm font-semibold text-slate-400">资源信息</th>
                <th class="text-left p-4 text-sm font-semibold text-slate-400">分类</th>
                <th class="text-left p-4 text-sm font-semibold text-slate-400">平台</th>
                <th class="text-left p-4 text-sm font-semibold text-slate-400">下载量</th>
                <th class="text-left p-4 text-sm font-semibold text-slate-400">发布日期</th>
                <th class="text-left p-4 text-sm font-semibold text-slate-400">状态</th>
                <th class="text-right p-4 text-sm font-semibold text-slate-400">操作</th>
              </tr>
            </thead>
            <tbody>
              {resources.map((resource) => (
                <tr class="border-b border-white/5 hover:bg-white/5 transition-colors">
                  <td class="p-4">
                    <div class="flex items-center gap-3">
                      <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500/20 to-pink-500/20 flex items-center justify-center flex-shrink-0">
                        <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                        </svg>
                      </div>
                      <div class="min-w-0 flex-1">
                        <div class="font-semibold text-white truncate">{resource.title}</div>
                        <div class="text-sm text-slate-400 truncate">{resource.description}</div>
                      </div>
                    </div>
                  </td>
                  <td class="p-4">
                    <span class="px-3 py-1 rounded-lg text-xs font-bold" style="background: rgba(168, 85, 247, 0.2); border: 1px solid rgba(168, 85, 247, 0.3);">
                      {resource.category}
                    </span>
                  </td>
                  <td class="p-4 text-sm text-slate-300">{resource.platform}</td>
                  <td class="p-4 text-sm text-slate-300">
                    {resource.downloadCount.toLocaleString()}
                  </td>
                  <td class="p-4 text-sm text-slate-300">{resource.createdAt}</td>
                  <td class="p-4">
                    {resource.featured ? (
                      <span class="px-3 py-1 rounded-lg text-xs font-bold bg-yellow-500/20 text-yellow-300 border border-yellow-500/30 flex items-center gap-1 w-fit">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                        精选
                      </span>
                    ) : (
                      <span class="px-3 py-1 rounded-lg text-xs font-bold bg-green-500/20 text-green-300 border border-green-500/30">
                        已发布
                      </span>
                    )}
                  </td>
                  <td class="p-4 text-right">
                    <div class="flex items-center justify-end gap-2">
                      <button class="p-2 rounded-lg transition-all duration-300 hover:scale-110 hover:bg-purple-500/20" title="编辑">
                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 0L15 7m-3 3v4m0 0l4-4m-4 4h8"/>
                        </svg>
                      </button>
                      <button class="p-2 rounded-lg transition-all duration-300 hover:scale-110 hover:bg-red-500/20" title="删除">
                        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      </button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>

        <!-- 分页 -->
        <div class="flex items-center justify-between p-6 border-t border-white/10">
          <span class="text-sm text-slate-400">显示 1-{resources.length} 条，共 {resources.length} 条</span>
          <div class="flex gap-2">
            <button class="px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300" style="background: rgba(255, 255, 255, 0.05);" disabled>
              上一页
            </button>
            <button class="px-4 py-2 rounded-xl text-sm font-medium text-white" style="background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);">
              1
            </button>
            <button class="px-4 py-2 rounded-xl text-sm font-medium transition-all duration-300" style="background: rgba(255, 255, 255, 0.05);" disabled>
              下一页
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
