---
import type { Resource } from '../data/resources';

interface Props {
  resource: Resource;
  index?: number;
}

const { resource, index = 0 } = Astro.props;

// 格式化下载量
function formatDownloads(count: number): string {
  if (count >= 10000) {
    return (count / 10000).toFixed(1) + 'w';
  } else if (count >= 1000) {
    return (count / 1000).toFixed(1) + 'k';
  }
  return count.toString();
}

// 获取分类颜色
function getCategoryColor(category: string): string {
  const colors: Record<string, string> = {
    '设计资源': 'from-pink-500 to-rose-500',
    '开发工具': 'from-purple-500 to-indigo-500',
    '视频教程': 'from-cyan-500 to-blue-500',
    '电子书': 'from-green-500 to-emerald-500',
    '软件素材': 'from-orange-500 to-amber-500',
    '模板源码': 'from-red-500 to-pink-500',
  };
  return colors[category] || 'from-purple-500 to-pink-500';
}

// 获取平台图标
function getPlatformIcon(platform: string): string {
  return 'M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12'; // 云盘图标
}
---

<a
  href={`/resources/${resource.id}`}
  class="resource-card group block fade-in"
  style={`animation-delay: ${index * 80}ms;`}
>
  <!-- 精选标签 -->
  {resource.featured && (
    <div class="absolute top-4 right-4 px-3 py-1.5 rounded-lg text-xs font-bold glow-sm" style="background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);">
      <span class="flex items-center gap-1">
        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        精选
      </span>
    </div>
  )}

  <!-- 封面图区域（可选） -->
  {resource.coverImage && (
    <div class="relative mb-4 rounded-2xl overflow-hidden" style="height: 180px;">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-500/20 to-pink-500/20"></div>
      <img
        src={resource.coverImage}
        alt={resource.title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
        loading="lazy"
      />
    </div>
  )}

  <!-- 分类标签 -->
  <div class="flex items-center gap-2 mb-3">
    <span class="px-3 py-1 rounded-lg text-xs font-bold text-white" style={`background: linear-gradient(135deg, ${getCategoryColor(resource.category)});`}>
      {resource.category}
    </span>
    <span class="flex items-center gap-1 text-xs text-slate-400">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getPlatformIcon(resource.platform)}/>
      </svg>
      {resource.platform}
    </span>
  </div>

  <!-- 标题 -->
  <h3 class="text-xl font-bold mb-3 group-hover:text-white transition-colors duration-300 line-clamp-2 leading-relaxed">
    {resource.title}
  </h3>

  <!-- 描述 -->
  <p class="text-sm text-slate-400 mb-4 line-clamp-2 leading-relaxed">
    {resource.description}
  </p>

  <!-- 标签 -->
  <div class="flex flex-wrap gap-2 mb-4">
    {resource.tags.slice(0, 3).map(tag => (
      <span class="text-xs px-3 py-1.5 rounded-lg" style="background: rgba(168, 85, 247, 0.15); border: 1px solid rgba(168, 85, 247, 0.2);">
        #{tag}
      </span>
    ))}
    {resource.tags.length > 3 && (
      <span class="text-xs px-3 py-1.5 rounded-lg text-slate-400">
        +{resource.tags.length - 3}
      </span>
    )}
  </div>

  <!-- 底部信息 -->
  <div class="flex items-center justify-between pt-4 border-t border-white/10">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
        <span class="text-xs font-bold text-white">
          {resource.author.name.charAt(0)}
        </span>
      </div>
      <div>
        <div class="text-xs font-medium">{resource.author.name}</div>
        <div class="text-xs text-slate-400">{resource.createdAt}</div>
      </div>
    </div>

    <div class="flex items-center gap-4 text-xs text-slate-400">
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l4-4m4 4V9a2 2 0 00-2-2H6a2 2 0 00-2 2v11"/>
        </svg>
        {resource.fileSize}
      </span>
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        {formatDownloads(resource.downloadCount)}
      </span>
    </div>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
